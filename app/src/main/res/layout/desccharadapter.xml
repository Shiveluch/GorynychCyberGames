<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/a_perc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:fontFamily="@font/tech4"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="ЛОКАЦИЯ:"
                android:textColor="#00EDFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/a_descript"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/micra"
                android:gravity="center_vertical"
                android:shadowColor="#000000"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="TextView"
                android:textColor="@color/cybergreen"
                android:textSize="14sp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/a_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/p_lon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/tech4"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="Свойство:"
        android:textColor="#00EDFF"
        android:textSize="16sp"
        android:visibility="gone" />


</RelativeLayout>