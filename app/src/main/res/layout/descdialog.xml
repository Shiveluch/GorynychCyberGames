<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/descback"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical">

        <EditText
            android:id="@+id/maindesc"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/darkstroke"
            android:backgroundTintMode="src_in"
            android:ems="10"
            android:fontFamily="@font/micra"
            android:gravity="top"

            android:inputType="textMultiLine|textPersonName"
            android:textColor="#0CE410"
            android:textColorHint="#5EF3F6F3"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/darkstroke"
            android:backgroundTintMode="src_in"
            android:ems="10"
            android:fontFamily="@font/tech4"
            android:hint="Дополнительные материалы"
            android:inputType="textPersonName"
            android:textColor="#0CE410"
            android:textColorHint="#5EF7F8F7"
            android:textStyle="bold" />

        <Button
            android:id="@+id/loadlink"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/savebut"
            android:fontFamily="@font/dexter"
            android:shadowColor="#000000"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="8"
            android:text="ПОЛУЧИТЬ\nДАННЫЕ"
            android:textColor="@color/cyberblue"
            android:textSize="20sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/but_ok"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/a_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dexter"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:shadowColor="#005EFF"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:text="ОК"
                    android:textColor="#00edff"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/but_exit"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dexter"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:shadowColor="#005EFF"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:text="ВЫХОД"
                    android:textColor="#00edff"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>