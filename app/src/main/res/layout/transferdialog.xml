<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/bank"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/receqivername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="@font/tech4"
                android:hint="Поиск получателя"
                android:inputType="textPersonName"
                android:textColor="@color/cybergreen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/receqivername"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ListView
                        android:id="@+id/playerslist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/stroke"
                        android:dividerHeight="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/currentperc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tech4"
                        android:text="Получатель: отсутствует"
                        android:textColor="@color/cybergreen"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/percdata"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/stroke"
                        android:backgroundTintMode="src_in"
                        android:ems="10"
                        android:fontFamily="@font/micra"
                        android:hint="Количество"
                        android:inputType="number"
                        android:maxLength="9"
                        android:textColor="#0CE410"
                        android:textColorHint="#5EF3F6F3"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dotll"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/transfer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/but_ok"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/a_role"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/dexter"
                            android:gravity="center|center_horizontal|center_vertical"
                            android:shadowColor="#000000"
                            android:shadowDx="8"
                            android:shadowDy="8"
                            android:shadowRadius="8"
                            android:text="ОК"
                            android:textColor="#00edff"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dismiss"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/but_exit"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/dexter"
                            android:gravity="center|center_horizontal|center_vertical"
                            android:shadowColor="#005EFF"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="3"
                            android:text="ОТМЕНА"
                            android:textColor="#00edff"
                            android:textSize="24sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>